<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/details_img_id"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/bolokit" />

        <TextView
            android:id="@+id/details_product_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/details_product_price_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="Preco"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/details_product_digital_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="Digital"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/product_btn_add_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:text="Adicionar ao Carrinho"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"/>

    </LinearLayout>




</RelativeLayout>